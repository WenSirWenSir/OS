<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#666666"    android:fitsSystemWindows="false"    android:orientation="vertical">    <FrameLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <ImageView            android:id="@+id/act_showmain_imgPhotos"            android:layout_width="match_parent"            android:layout_height="match_parent" />    </FrameLayout>    <TextView        android:id="@+id/act_showmain_btnHome"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_marginLeft="20dp"        android:layout_marginBottom="15dp"        android:text="首页"        android:textColor="#ffffff"        android:textSize="18sp"        android:textStyle="bold" />    <TextView        android:id="@+id/act_showmain_btnMe"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentRight="true"        android:layout_alignParentBottom="true"        android:layout_marginRight="20dp"        android:layout_marginBottom="15dp"        android:text="我"        android:textColor="#bfbfbf"        android:textSize="15sp"        android:textStyle="bold" />    <TextView        android:id="@+id/act_showmain_btnPay"        android:layout_width="70dp"        android:layout_height="25dp"        android:layout_alignParentBottom="true"        android:layout_centerHorizontal="true"        android:layout_marginBottom="15dp"        android:gravity="center"        android:text="Pay"        android:textColor="#ffffff"        android:textSize="15sp"        android:textStyle="bold" />    <!--退出的按键-->    <ImageView        android:id="@+id/act_showmain_btnBack"        android:layout_width="25dp"        android:layout_height="25dp"        android:layout_marginLeft="10dp"        android:layout_marginTop="25dp"        android:src="@drawable/ico_back" /></RelativeLayout>