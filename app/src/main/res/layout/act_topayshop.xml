<?xml version="1.0" encoding="utf-8"?><!--购买商品的界面--><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff"    android:fitsSystemWindows="true"    android:orientation="vertical">    <!--头部的选择  -->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#efefef"        android:orientation="horizontal">        <RelativeLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="70dp"                android:layout_centerInParent="true"                android:background="@color/SystemTheme"                android:orientation="vertical"                android:paddingBottom="5dp">                <ImageView                    android:id="@+id/act_topayshopIcoconfirmShop"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_centerHorizontal="true"                    android:layout_marginTop="10dp"                    android:src="@drawable/ico_toconfirmshop" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_alignParentBottom="true"                    android:gravity="center"                    android:text="确定订单"                    android:textColor="#ffffff"                    android:textSize="13sp" />            </RelativeLayout>        </RelativeLayout>        <RelativeLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="70dp"                android:layout_centerInParent="true"                android:orientation="vertical"                android:paddingBottom="5dp">                <ImageView                    android:id="@+id/act_topayshopIcoselectpay"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_centerHorizontal="true"                    android:layout_marginTop="10dp"                    android:src="@drawable/ico_toselectpay" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_alignParentBottom="true"                    android:gravity="center"                    android:text="支付方式"                    android:textColor="#020433"                    android:textSize="13sp" />            </RelativeLayout>        </RelativeLayout>        <RelativeLayout            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="70dp"                android:layout_centerInParent="true"                android:orientation="vertical"                android:paddingBottom="5dp">                <ImageView                    android:id="@+id/act_topayshopIcopayResult"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_centerHorizontal="true"                    android:layout_marginTop="10dp"                    android:src="@drawable/ico_topayresult" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_alignParentBottom="true"                    android:gravity="center"                    android:text="支付完成"                    android:textColor="@color/SystemTextColor"                    android:textSize="13sp" />            </RelativeLayout>        </RelativeLayout>    </LinearLayout>    <!--显示确定商品-->    <LinearLayout        android:id="@+id/act_topayMsgBody"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#efefef"        android:orientation="vertical">    </LinearLayout></LinearLayout>