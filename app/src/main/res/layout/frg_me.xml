<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff"    android:orientation="vertical">    <!--横向滚动条-->    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="25dp"        android:background="#ffffff">        <HorizontalScrollView            android:layout_width="match_parent"            android:scrollbars="none"            android:id="@+id/frg_meSelectHorizontal"            android:layout_height="30dp"            >            <LinearLayout                android:layout_width="match_parent"                android:layout_height="30dp"                android:id="@+id/frg_meItemBody"                android:orientation="horizontal"                >            </LinearLayout>        </HorizontalScrollView>    </RelativeLayout></LinearLayout>