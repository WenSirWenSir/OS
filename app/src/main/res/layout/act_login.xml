<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical">    <com.bigkoo.convenientbanner.ConvenientBanner        android:id="@+id/act_loginBanner"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:background="#f30d88">    </com.bigkoo.convenientbanner.ConvenientBanner>    <!--显示一个货的字体-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="100dp">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Free"            android:textColor="#020433"            android:textSize="35sp"            android:textStyle="bold" />    </LinearLayout>    <!--登录等待框-->    <RelativeLayout        android:id="@+id/act_loginInputWaitBody"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp"        android:layout_marginBottom="5dp">        <RelativeLayout            android:layout_width="100dp"            android:layout_height="100dp"            android:layout_centerInParent="true">            <ProgressBar                android:layout_width="60dp"                android:layout_height="60dp"                android:layout_centerInParent="true" />        </RelativeLayout>    </RelativeLayout>    <!--登录框-->    <RelativeLayout        android:id="@+id/act_loginInputBody"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp"        android:layout_marginBottom="5dp"        android:visibility="gone"        >        <LinearLayout            android:layout_width="match_parent"            android:layout_height="150dp"            android:layout_centerInParent="true"            android:background="#ffffff"            android:orientation="vertical"            >            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="5dp">                <os.zbwlkj.com.os.Views.SystemTextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerHorizontal="true"                    android:text="一个货"                    android:textColor="#000000"                    android:textSize="17sp"                    android:textStyle="bold" />            </RelativeLayout>            <os.zbwlkj.com.os.Views.SystemEditText                android:id="@+id/act_loginETphone"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="10dp"                android:background="#ffffff"                android:gravity="center"                android:text="15206036936"                android:textColor="#08c299" />            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <os.zbwlkj.com.os.Views.SystemEditText                    android:id="@+id/act_loginETcode"                    android:layout_width="150dp"                    android:layout_height="wrap_content"                    android:layout_centerHorizontal="true"                    android:layout_marginTop="10dp"                    android:background="#ffffff"                    android:gravity="center"                    android:text="0837"                    android:textColor="#000000"                    android:textSize="15sp" />            </RelativeLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content">                <os.zbwlkj.com.os.Views.SystemTextView                    android:id="@+id/act_loginBtnlogin"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_centerHorizontal="true"                    android:layout_marginTop="15dp"                    android:background="#08c299"                    android:paddingLeft="25dp"                    android:paddingTop="3dp"                    android:paddingRight="25dp"                    android:paddingBottom="3dp"                    android:text="登录"                    android:textColor="#020433" />            </RelativeLayout>        </LinearLayout>    </RelativeLayout></RelativeLayout>