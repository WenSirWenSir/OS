<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff">    <ImageView        android:id="@+id/frg_shopImg"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scaleType="fitXY" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="170dp"        android:layout_alignParentBottom="true"        android:layout_marginBottom="60dp">        <!--横向信息的遮罩层-->        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:alpha="0.6"            android:background="#000000">        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginTop="10dp"                android:text="@string/APP_SHOP_TITLE"                android:textColor="#ffffff"                android:textSize="20sp"                android:textStyle="bold" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginTop="10dp"                android:text="3排18瓶125毫升袋装"                android:textColor="#ffffff"                android:textSize="15sp"                android:textStyle="bold" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginTop="10dp"                android:text="配送直达:预计明天的11:02到"                android:textColor="#000000"                android:textSize="13sp"                android:textStyle="bold" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginTop="10dp"                android:text="生产日期:2019年11月28号;保质期:9个月"                android:textColor="#000000"                android:textSize="13sp"                android:textStyle="bold" />            <RelativeLayout                android:layout_width="wrap_content"                android:layout_height="30dp"                android:layout_marginLeft="10dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentBottom="true"                    android:layout_marginBottom="2dp"                    android:text="￥:"                    android:textColor="#020433"                    android:textSize="10sp" />                <os.zbwlkj.com.os.Views.SystemPriceTextView                    android:id="@+id/frg_shopPrice"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentBottom="true"                    android:layout_marginLeft="20dp"                    android:textColor="#ffffff"                    android:textSize="25sp"                    android:textStyle="bold" />            </RelativeLayout>        </LinearLayout>    </RelativeLayout></RelativeLayout>